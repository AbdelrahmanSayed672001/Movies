@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Banking System</title>
    <link href="~/SystemStyle/assets/css/LoginForm.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

</head>
<body>

    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card" style="margin-top: 40px; padding-bottom: 15px; height: auto;width: 550px;">
                <div class="card-header">
                    <h3 style="margin-left: 200px;">Sign Up</h3>
                </div>
                <div class="card-body">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="input-group form-group">

                            <input asp-for="Input.Username"class="form-control" placeholder="Username" style="margin-top:20px;" required="">
                            @*<span asp-validation-for="Input.Username" class="text-danger"></span>*@

                        </div>

                        <div class="input-group form-group">

                            <input asp-for="Input.Email"class="form-control" placeholder="email" style="margin-top:20px;" required="">
                            @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                        </div>
                        
                        <div class="input-group form-group">

                            <input asp-for="Input.Age" class="form-control" placeholder="Age" style="margin-top:20px;" required="">
                            @*<span asp-validation-for="Input.Age" class="text-danger"></span>*@

                        </div>
                        
                        <div class="input-group form-group">
                            <select asp-for="Input.gender" asp-items="Html.GetEnumSelectList<Gender>()" name="Gender" id="Gender" class="custom-select" style="margin-top: 20px;">
                                
                                <option selected="selected" value="">Please select a gender</option>
                                @*<option name="Male"  value="1">Male</option>
                                <option name="Female" value="0">Female</option>*@
                            </select>
                        </div>

                        <div class="input-group form-group">

                            <input asp-for="Input.Password" class="form-control" placeholder="password" style="margin-top:20px;" required="">
                            @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
                        </div>
                        
                        <button type="submit" class="btn float-right login_btn">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





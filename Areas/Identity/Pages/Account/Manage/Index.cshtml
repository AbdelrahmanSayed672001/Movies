@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<html>
<head>

    <title>Banking System</title>
    <link href="~/SystemStyle/assets/css/LoginForm.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

</head>
<body>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <form id="profile-form" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                </div>
                <button type="submit" class="btn float-right login_btn">Save</button>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @{
                        if (@Model.Input.ProfileImg != null)
                        {
                            <img id="profileImg" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfileImg))" style="height: 200px;width: 200px;margin-left: 60px;" alt="Profile Image" />
                        }
                        else
                        {
                            <img id="profileImg" src="~/Images/avatar-male.jpg" style="height: 200px;width: 200px;margin-left: 60px;" alt="Profile Image" />

                        }
                    }

                    <div class="custom-file mt-2">
                        <input asp-for="Input.ProfileImg"
                               class="custom-file-input"
                               type="file"
                               accept="image/*"
                               onchange="document.getElementById('profileImg').src=window.URL.createObjectURL(this.files[0])  " />

                        <label class="custom-file-label" asp-for="Input.ProfileImg"> Select a profile image</label>

                        <span asp-validation-for="Input.ProfileImg" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

    </form>

</body>


</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}